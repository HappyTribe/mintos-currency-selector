{
    "parser": "babel-eslint",
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier", "prettier/react"],
    "plugins": ["prettier"],
    "env": {
        "browser": true
    },
    "globals": {
        "module": true,
        "__dirname": true,
        "require": true,
        "environment": true,

        "React": true,
        "PropTypes": true,
        "compose": true,
        "classNames": true,
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": ["error", "never"],
        "react/no-deprecated": "error",
        "arrow-body-style": ["error", "as-needed"],
        "no-var": ["error"],
        "prefer-const": ["error"],
        "prefer-template": ["error"],
        "react/jsx-no-undef": [
            "error",
            {
                "allowGlobals": true
            }
        ],
        "prettier/prettier": ["error"],
    }
}
